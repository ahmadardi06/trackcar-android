<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.ansyah.ardi.trackcar.MainActivity"
    android:weightSum="1">

    <ImageView
        android:src="@drawable/kondisireadyon"
        android:id="@+id/imgAppRespon"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1" />

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/txtConnected"
        android:fontFamily="serif"
        android:textColor="@color/colorHijau"
        android:textAlignment="center"
        android:text="Car Connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/btnGpsMain"
            android:background="@drawable/button_style"
            android:layout_margin="2.5dp"
            android:textColor="@color/colorTulisan"
            android:drawableTop="@drawable/ic_gps_hitam"
            android:textOff="GPS"
            android:layout_width="75dp"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCaptureMain"
            android:background="@drawable/button_style"
            android:layout_margin="2.5dp"
            android:textColor="@color/colorHijau"
            android:drawableTop="@drawable/ic_camera_hijau"
            android:text="Capture"
            android:textAllCaps="false"
            android:fontFamily="serif"
            android:layout_width="75dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnInfoMain"
            android:background="@drawable/button_style"
            android:layout_margin="2.5dp"
            android:textColor="@color/colorHijau"
            android:drawableTop="@drawable/ic_info_hijau"
            android:text="Info"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:layout_width="75dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogoutMain"
            android:background="@drawable/button_style"
            android:layout_margin="2.5dp"
            android:textColor="@color/colorHijau"
            android:drawableTop="@drawable/ic_logout_hijau"
            android:text="Logout"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:layout_width="75dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
