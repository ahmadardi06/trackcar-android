<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    tools:context="com.ansyah.ardi.trackcar.AppsActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ToggleButton
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsLights"
            android:background="@drawable/button_style"
            android:textColor="@color/colorTulisan"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textOff="Lights"
            android:drawableTop="@drawable/ic_lamp_hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsLock"
            android:background="@drawable/button_style"
            android:textColor="@color/colorTulisan"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textOff="Horn"
            android:drawableTop="@drawable/ic_horn_hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsEngine"
            android:background="@drawable/button_style"
            android:textColor="@color/colorTulisan"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textOff="Power"
            android:drawableTop="@drawable/ic_power_hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnStartEngine"
            android:background="@drawable/button_style"
            android:textColor="@color/colorTulisan"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Start"
            android:drawableTop="@drawable/ic_starter_hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsGpss"
            android:background="@drawable/button_style"
            android:textColor="@color/colorTulisan"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textOff="GPS"
            android:drawableTop="@drawable/ic_gps_hitam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsMap"
            android:background="@drawable/button_style"
            android:textColor="@color/colorHijau"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Location"
            android:drawableTop="@drawable/ic_map_hijau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsCamera"
            android:background="@drawable/button_style"
            android:textColor="@color/colorHijau"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Capture"
            android:drawableTop="@drawable/ic_camera_hijau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:id="@+id/btnAppsDriver"
            android:background="@drawable/button_style"
            android:textColor="@color/colorHijau"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Driver"
            android:drawableTop="@drawable/ic_driver_hijau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgAppsRespon"
            android:src="@drawable/kondisireadyon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
